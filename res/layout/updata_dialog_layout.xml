<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <TextView android:layout_width="match_parent"
              android:layout_height="@dimen/height_50"
              android:textSize="@dimen/text_size_3"
              android:gravity="center_vertical"
              android:textColor="@android:color/black"
              android:padding="10.0dp"
              android:text="@string/update_prompt"/>
    <View style="@style/line2"/>
    <TextView android:id="@id/content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textSize="@dimen/text_size_3"
              android:layout_weight="1"
              android:lineSpacingExtra="10.0dp"
              android:textColor="@android:color/black"
              android:padding="10.0dp"/>
    <View style="@style/line2"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:orientation="horizontal">
        <TextView android:id="@id/cancel"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:textSize="@dimen/text_size_3"
                  android:textColor="@android:color/black"
                  android:layout_weight="1"
                  android:text="@string/cancel"
                  android:gravity="center"/>
        <View android:layout_width="0.1dp" android:layout_height="match_parent"
              android:background="@color/line_dark2"/>
        <TextView android:id="@id/ok"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:textSize="@dimen/text_size_3"
                  android:textColor="@android:color/black"
                  android:text="@string/ok"
                  android:layout_weight="1"
                  android:gravity="center"/>
    </LinearLayout>
</LinearLayout>