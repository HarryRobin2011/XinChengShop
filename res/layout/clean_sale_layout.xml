<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/body_bg">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_40"
                  android:background="@color/white"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <TextView android:id="@id/title"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/height_40"
                  android:background="@color/white"
                  style="@style/text_style_3"
                  android:textSize="@dimen/text_size_4"
                  android:paddingLeft="10.0dp"
                  android:text="@string/qingcang"
                  android:layout_weight="1"
                  android:textColor="@color/red_normal"/>
        <TextView android:id="@id/more"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/height_40"
                  android:background="@color/white"
                  style="@style/text_style_3"
                  android:textSize="@dimen/text_size_4"
                  android:paddingLeft="10.0dp"
                  android:text="@string/more"
                  android:textColor="@color/text_gray_light_l"/>
        <ImageView android:layout_width="15.0dp"
                   android:layout_height="15.0dp"
                   android:background="@drawable/settings_arrow"
                   android:layout_marginRight="10.0dp"/>
    </LinearLayout>

    <com.banksoft.XinChengShop.widget.MyGridView
            android:id="@id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:horizontalSpacing="10.0dp"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:cacheColorHint="@color/transparent"
            android:verticalSpacing="10.0dp"/>
</LinearLayout>