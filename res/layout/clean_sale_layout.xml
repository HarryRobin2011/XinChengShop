<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/body_bg">
    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <View style="@style/line2"
        android:layout_centerVertical="true"/>
        <TextView android:id="@id/title"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/height_30"
                  android:background="@drawable/red_radius_cricle_bg_normal"
                  android:layout_centerInParent="true"
                  style="@style/text_style_3"
                  android:textSize="@dimen/text_size_4"
                  android:paddingLeft="10.0dp"
                  android:paddingRight="10.0dp"
                  android:layout_weight="1"
                  android:textColor="@color/white"/>

    </RelativeLayout>

    <com.banksoft.XinChengShop.widget.MyGridView
            android:id="@id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:horizontalSpacing="5.0dp"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:cacheColorHint="@color/transparent"
            android:verticalSpacing="5.0dp"/>
    <TextView android:id="@id/more"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_50"
    style="@style/text_style_4"
    android:gravity="center"
    android:text="@string/more_product"/>
</LinearLayout>