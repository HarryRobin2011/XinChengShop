<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/height_50"
              android:gravity="center_vertical">
    <ImageView android:id="@id/title_back_button"
               android:layout_width="@dimen/height_20"
               android:layout_height="@dimen/height_20"
               android:layout_marginLeft="5.0dp"
               android:visibility="gone"
               android:src="@drawable/wopc_arrow"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="30.0dp"
                  android:layout_weight="1"
                  android:padding="1.0dp"
                  android:layout_marginLeft="10.0dp"
                  android:background="@drawable/edit_text_bg"
                  android:orientation="horizontal">
        <Button android:id="@id/search_type"
        android:layout_width="@dimen/height_50"
        android:layout_height="match_parent"
                android:layout_marginLeft="10.0dp"
        style="@style/text_style_3"
        android:gravity="center"
                android:background="@color/white"
                android:drawableRight="@drawable/btn_title_down"
        android:text="@string/product"/>
        <com.banksoft.XinChengShop.widget.ClearEditText
                android:id="@id/search_edit"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_30"
                android:layout_marginLeft="10.0dp"
                android:textSize="@dimen/text_size_5"
                android:layout_weight="1"
                android:paddingLeft="10.0dp"
                android:cursorVisible="true"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:background="@drawable/edit_text_white_bg"
                android:hint="@string/please_input_product_name"/>
    </LinearLayout>

    <TextView android:id="@id/search"
            android:layout_width="@dimen/height_50"
            android:layout_marginLeft="10.0dp"
            style="@style/text_style_3"
            android:text="@string/cancel"
            android:gravity="center"
            android:layout_marginRight="5.0dp"
            android:layout_height="@dimen/height_30"/>
</LinearLayout>