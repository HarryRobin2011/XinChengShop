<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.banksoft.XinChengShop.widget.MyGridView
              android:id="@id/gridView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:cacheColorHint="@color/transparent"
              android:numColumns="3"
              android:verticalSpacing="0.1dp"
              android:horizontalSpacing="0.1dp"
              android:background="@drawable/body_bg"
              android:listSelector="@drawable/button_white_bg"/>
    <ProgressBar android:id="@id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="center"
                android:indeterminateDrawable="@drawable/my_progress_bg"/>
</FrameLayout>