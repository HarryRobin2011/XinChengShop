                          <!--android:layout_width="match_parent"-->
                          <!--android:layout_height="@dimen/height_50"-->
                          <!--android:gravity="center_vertical"-->
                          <!--android:background="@drawable/button_white_bg"-->
                          <!--android:orientation="horizontal">-->
                <!--<ImageView android:layout_width="35.0dp"-->
                           <!--android:layout_height="35.0dp"-->
                           <!--android:src="@drawable/android_my_jd_game_center"-->
                           <!--android:paddingLeft="10.0dp"/>-->
                <!--<TextView android:layout_width="match_parent"-->
                          <!--android:layout_height="wrap_content"-->
                          <!--android:text="@string/xc_bbs"-->
                          <!--style="@style/text_style_3"-->
                          <!--android:layout_weight="1"-->
                          <!--android:paddingLeft="10.0dp"/>-->
                <!--<TextView android:layout_width="wrap_content"-->
                          <!--android:layout_height="wrap_content"-->
                          <!--android:background="@drawable/to_right"-->
                          <!--android:layout_marginRight="10.0dp"/>-->
            <!--</LinearLayout>-->

            <View style="@style/line1"/>

            <LinearLayout android:id="@id/my_integral_mall"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:gravity="center_vertical"
                          android:background="@color/white"
                          android:orientation="horizontal">
                <ImageView android:layout_width="35.0dp"
                           android:layout_height="35.0dp"
                           android:src="@drawable/android_my_jd_phone_appoint"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/integral_mall"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/to_right"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>