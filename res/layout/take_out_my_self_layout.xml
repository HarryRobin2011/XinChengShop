<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/body_bg">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="60.0dp"
                  android:gravity="center_vertical"
                  android:background="@color/white">
        <ImageView android:id="@id/image"
                   android:layout_width="@dimen/height_40"
                   android:layout_height="@dimen/height_40"
                   android:layout_marginLeft="10.0dp"
                   android:background="@drawable/contact_avator"
                   android:scaleType="centerInside"/>
        <TextView android:id="@id/account"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:layout_marginRight="10.0dp"
                  android:text="@string/click_login"
                  android:layout_marginLeft="10.0dp"
                  style="@style/text_style_3"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:gravity="center_vertical"
                  android:layout_marginTop="10.0dp"
                  android:background="@color/white">
        <ImageView android:id="@id/image"
                   android:layout_width="40.0dp"
                   android:layout_height="40.0dp"
                   android:layout_marginLeft="10.0dp"
                   android:src="@drawable/android_my_jd_account_center"
                   android:scaleType="centerInside"/>
        <TextView android:id="@id/address_manager"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:layout_marginRight="10.0dp"
                  android:layout_marginLeft="10.0dp"
                   android:text="@string/address_manage"
                  style="@style/text_style_3"/>

    </LinearLayout>

</LinearLayout>