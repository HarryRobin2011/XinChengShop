<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@id/num_edit_layout"
        android:paddingLeft="2.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton
            android:id="@id/cart_single_product_num_reduce"
            android:background="@drawable/click_round_substraction_bg"
            android:layout_width="27.0dip"
            android:layout_height="27.0dip"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:clickable="true"/>
    <TextView
            android:id="@id/cart_single_product_et_num"
            android:textSize="17.0sp"
            android:textColor="@color/cart_product_name"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="@dimen/height_50"
            android:layout_height="37.0dp"
            android:minWidth="37.0dip"
            android:singleLine="true"
            android:visibility="gone"
            android:text="1"
            android:selectAllOnFocus="true"
            android:maxLength="4"
            android:layout_toRightOf="@id/cart_single_product_num_reduce"
            android:layout_centerVertical="true"/>
    <ImageButton
            android:id="@id/cart_single_product_num_add"
            android:background="@drawable/click_round_plus_bg"
            android:layout_width="27.0dip"
            android:layout_height="27.0dip"
            android:layout_toRightOf="@id/cart_single_product_et_num"
            android:layout_centerVertical="true"
            android:clickable="true"/>
</RelativeLayout>
