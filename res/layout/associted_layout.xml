<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/title"/>
    <ImageView android:id="@id/image"
               android:layout_width="100.0dp"
               android:layout_height="100.0dp"
               android:layout_marginTop="10.0dp"
               android:layout_gravity="center_horizontal"
               android:layout_marginBottom="10.0dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="20.0dp"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:id="@id/tag"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/text_style_3"
                      android:text="亲爱的QQ用户："
                      android:textColor="@color/gray"/>
            <TextView android:id="@id/name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/text_style_3"
                      android:layout_marginLeft="10.0dp"
                      android:text="HarryRobin"/>
        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/text_style_3"
                  android:layout_marginTop="10.0dp"
                  android:text="@string/server_support_goods"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/text_style_3"
                  android:layout_marginTop="20.0dp"
                  android:textColor="@color/gray"
                  android:text="@string/no_xincheng_account"/>

        <Button android:id="@id/register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:layout_marginTop="10.0dp"
                android:background="@drawable/red_radus_bg"
                android:textColor="@color/text_white"
                android:text="@string/fast_gister"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/height_40"
                      android:layout_marginTop="20.0dp"
                      android:orientation="horizontal">
            <ImageView android:layout_width="100.0dp"
                       android:layout_height="@dimen/height_40"
                       android:background="@drawable/company_logo"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/text_style_3"
                      android:textColor="@color/gray"
                      android:layout_marginLeft="10.0dp"
                      android:layout_gravity="bottom"
                      android:layout_marginBottom="3.0dp"
                      android:text="@string/no_xincheng_account"/>
        </LinearLayout>
        <Button android:id="@id/associted_account"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/height_50"
                 android:layout_marginTop="10.0dp"
                android:text="@string/immediately"
                 android:background="@drawable/edit_text_bg_press"/>
    </LinearLayout>

</LinearLayout>