<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/body_bg">
    <include layout="@layout/search_title_layout"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_30"
                  android:background="@color/white"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="horizontal">
            <TextView android:id="@id/comprehensive"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      style="@style/text_style_3"
                      android:textColor="@color/red_normal"
                      android:text="@string/comprehensive"
                      android:layout_gravity="center"/>
            <ImageView android:id="@id/comprehensive_image"
                       android:layout_width="7.0dp"
                       android:layout_height="5.0dp"
                       android:scaleType="centerInside"
                       android:layout_gravity="center"
                       android:layout_marginLeft="5.0dp"
                       android:background="@drawable/ic_arrow_down"/>
        </LinearLayout>


        <TextView android:id="@id/sentiment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  style="@style/text_style_3"
                  android:text="@string/sentiment_hight"
                  android:gravity="center"
                  android:layout_weight="1"/>
        <TextView android:id="@id/sales_preferred"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  style="@style/text_style_3"
                  android:text="@string/sales_preferred"
                  android:gravity="center"
                  android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout android:id="@id/content"
                 android:layout_width="match_parent"
                 android:background="@color/white"
                 android:layout_marginTop="0.1dp"
                 android:layout_height="match_parent"/>

</LinearLayout>