<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/height_50">
        <ImageView android:id="@id/title_back_button"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10.0dp"
                   android:background="@drawable/tb_icon_actionbar_back"/>
        <com.banksoft.XinChengShop.widget.viewpagerindicator.TabPageIndicator
                android:id="@id/tab_page_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        <ImageView android:id="@id/more"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="10.0dp"
                   android:background="@drawable/tb_icon_actionbar_more"/>

</RelativeLayout>