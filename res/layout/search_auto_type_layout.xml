<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView android:layout_width="@dimen/height_150"
               android:layout_height="@dimen/height_100"
               android:alpha="0.9"
               android:background="@drawable/abc_menu_dropdown_panel_holo_dark"/>
    <RadioGroup android:id="@id/search_type"
                android:layout_width="@dimen/height_150"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dp"
                android:gravity="center">
        <RadioButton android:id="@id/product"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/height_40"
                     android:textColor="@color/text_white"
                     android:text="@string/product"
                     android:button="@null"
                     android:gravity="center"/>
        <RadioButton android:id="@id/shop"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/height_40"
                     android:text="@string/shop"
                     android:textColor="@color/text_white"
                     android:button="@null"
                     android:gravity="center"/>
    </RadioGroup>

</RelativeLayout>