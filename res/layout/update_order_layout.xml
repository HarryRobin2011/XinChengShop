<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <include layout="@layout/title"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10.0dp"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="@dimen/height_50"
                  android:text="@string/order_total"
                  style="@style/text_style_3"/>
        <com.banksoft.XinChengShop.widget.ClearEditText
                android:id="@id/total"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:layout_marginLeft="10.0dp"
                android:paddingRight="10.0dp"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:maxLength="8"
                android:hint="@string/pleaset_input_order_total"
                android:inputType="numberDecimal"
                android:text="0"
                android:imeOptions="actionNext"
                android:background="@drawable/edit_text_white_bg"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10.0dp"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="@dimen/height_50"
                  android:text="@string/express_money_total"
                  style="@style/text_style_3"/>
        <com.banksoft.XinChengShop.widget.ClearEditText android:layout_width="match_parent"
                                                        android:id="@id/express_money"
                                                        android:layout_height="@dimen/height_50"
                                                        android:layout_marginLeft="10.0dp"
                                                        android:inputType="numberDecimal"
                                                        android:imeOptions="actionDone"
                                                         android:text="0"
                                                        android:hint="@string/please_input_express_price"
                                                        android:singleLine="true"
                                                        android:paddingRight="10.0dp"
                                                        android:maxLength="8"
                                                        android:gravity="right|center_vertical"
                                                        android:background="@drawable/edit_text_white_bg"/>
    </LinearLayout>

    <Button
            android:id="@id/ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            style="@style/text_style_3"
            android:textColor="@color/text_white"
            android:layout_margin="10.0dp"
            android:text="@string/ok"
            android:gravity="center"
            android:background="@drawable/click_red_button"/>

</LinearLayout>