<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@drawable/edit_gray_bg">
    <com.banksoft.XinChengShop.widget.SquareLayout android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
        <ImageView android:id="@id/image"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:minHeight="@dimen/height_180"
                   android:layout_weight="1"
                   android:adjustViewBounds="true"
                   android:scaleType="fitXY"/>

    </com.banksoft.XinChengShop.widget.SquareLayout>
    <TextView android:id="@id/describe"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              style="@style/text_style_3"
              android:singleLine="true"
              android:ellipsize="end"
              android:gravity="center_vertical"
              android:textColor="@color/text_gray"
              android:paddingLeft="10.0dp"/>
    <TextView android:id="@id/real_price"
              android:layout_width="match_parent"
              android:layout_height="@dimen/height_30"
              style="@style/text_style_4"
              android:singleLine="true"
              android:layout_weight="1"
              android:textStyle="bold"
              android:layout_marginLeft="10.0dp"
              android:layout_marginRight="10.0dp"
              android:gravity="center_vertical"
              android:textColor="@color/red_normal"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_40"
                  android:layout_marginLeft="10.0dp"
                  android:layout_marginRight="10.0dp"
                  android:orientation="horizontal">
        <TextView android:id="@id/price"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:textSize="@dimen/text_size_3"
                  android:singleLine="true"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:gravity="center_vertical"
                  android:textColor="@color/red_normal"/>
        <TextView android:id="@id/num"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  style="@style/text_style_3"
                  android:singleLine="true"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textColor="@color/text_gray_light_l"/>
    </LinearLayout>

</LinearLayout>