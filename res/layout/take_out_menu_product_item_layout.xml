<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginBottom="10.0dp"
              android:layout_height="130.0dp">
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:layout_weight="1"

              android:layout_marginTop="10.0dp"
              android:orientation="horizontal">
    <ImageView android:id="@id/image"
               android:layout_width="100.0dp"
               android:layout_height="70.0dp"
               android:layout_marginLeft="10.0dp"
               android:scaleType="fitXY"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10.0dp"
                  android:orientation="vertical">
        <TextView android:id="@id/name"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  style="@style/text_style_3"/>
        <TextView android:id="@id/sale_num"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  style="@style/text_style_3"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:gravity="center_vertical"
                  android:paddingRight="10.0dp"
                  android:orientation="horizontal">
        <TextView android:id="@id/price"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/height_40"
                  android:layout_weight="1"
                  android:text="2元/份"
                  android:paddingLeft="10.0dp"
                  style="@style/text_style_3"
                  android:textColor="@color/red_normal"/>

        <include layout="@layout/round_num_edit_layout"/>
    </LinearLayout>

</LinearLayout>