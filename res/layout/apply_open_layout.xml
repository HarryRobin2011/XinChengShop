<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/body_bg">
    <include layout="@layout/title"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/height_80"
                          android:background="@color/white"
                          android:orientation="horizontal">
                <TextView android:layout_width="@dimen/height_80"
                          android:layout_height="match_parent"
                          style="@style/text_style_3"
                          android:gravity="center"
                          android:text="@string/apply_image"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_80"
                              android:gravity="center_vertical"
                              android:layout_marginLeft="10dp"
                              android:orientation="horizontal">
                        <ImageView android:id="@+id/one"
                                   android:layout_width="@dimen/height_60"
                                   android:layout_height="@dimen/height_60"
                                   android:src="@drawable/add_photo_bg"
                                   android:scaleType="centerInside"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/white"
                          android:layout_marginTop="10.0dp"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_name"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <EditText android:id="@+id/et_shopname"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:background="@color/white"
                              android:hint="@string/please_input_apply_shopname"
                              style="@style/text_style_3"
                              android:paddingLeft="10.0dp"
                              android:layout_weight="1"/>
                </LinearLayout>
                <View style="@style/line1"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_identity"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <EditText android:id="@+id/et_identity"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:background="@color/white"
                              android:hint="@string/please_input_apply_identity"
                              style="@style/text_style_3"
                              android:paddingLeft="10.0dp"
                              android:layout_weight="1"/>
                </LinearLayout>
                <View style="@style/line1"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_phone"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <EditText android:id="@+id/et_phone"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:background="@color/white"
                              android:hint="@string/please_select_apply_phone"
                              style="@style/text_style_3"
                              android:paddingLeft="10.0dp"
                              android:layout_weight="1"/>
                </LinearLayout>
                <View style="@style/line1"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10.0dp"
                          android:background="@color/white"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_cagetory"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <Button android:id="@+id/btn_selectshoptype"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:text="@string/please_select_apply_shoptype"
                            android:gravity="right|center_vertical"
                            style="@style/text_style_3"
                            android:drawableRight="@drawable/arrow_expend_right"
                            android:layout_marginRight="10.0dp"
                            android:layout_weight="1"/>
                </LinearLayout>
                <View style="@style/line1"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_shoptype"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <Button android:id="@+id/btn_selectshopcategroy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:text="@string/please_select_apply_shopcategroy"
                            android:gravity="right|center_vertical"
                            style="@style/text_style_3"
                            android:drawableRight="@drawable/arrow_expend_right"
                            android:layout_marginRight="10.0dp"
                            android:layout_weight="1"/>
                </LinearLayout>
                <View style="@style/line1"/>

                <View style="@style/line1"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_shopadress"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <Button android:id="@+id/btn_selectadress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:text="@string/please_select_area_site"
                            android:gravity="right|center_vertical"
                            style="@style/text_style_3"
                            android:drawableRight="@drawable/arrow_expend_right"
                            android:layout_marginRight="10.0dp"
                            android:layout_weight="1"/>
                </LinearLayout>
                <View style="@style/line1"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_adress"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <EditText android:id="@+id/et_adress"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:background="@color/white"
                              android:hint="@string/please_select_apply_adress"
                              style="@style/text_style_3"
                              android:paddingLeft="20.0dp"
                              android:layout_weight="1"/>
                </LinearLayout>
                <View style="@style/line1"/>
            </LinearLayout>










            <LinearLayout  android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10.0dp"
                           android:background="@color/white"
                           android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_work"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <EditText android:id="@+id/et_mainwork"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:background="@color/white"
                              android:hint="@string/please_select_apply_work"
                              style="@style/text_style_3"
                              android:paddingLeft="20.0dp"
                              android:layout_weight="1"/>
                </LinearLayout>
                <View style="@style/line1"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_Squareshop"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <RadioGroup android:id="@+id/rg_shop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:paddingLeft="10.0dp"
                                android:gravity="center">
                        <RadioButton android:id="@+id/rb_shopyes"
                                     android:layout_width="@dimen/height_20"
                                     android:layout_height="@dimen/height_20"
                                     android:background="@drawable/cart_product_checkbox_bg"
                                     android:checked="true"
                                     android:button="@null"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:text="@string/yes"
                                  android:layout_weight="1"
                                  android:layout_marginLeft="10.0dp"
                                  style="@style/text_style_3"/>
                        <RadioButton android:id="@+id/rb_shopno"
                                     android:layout_width="@dimen/height_20"
                                     android:layout_height="@dimen/height_20"
                                     android:background="@drawable/cart_product_checkbox_bg"
                                     android:button="@null" android:checked="false"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:text="@string/no"
                                  android:layout_weight="1"
                                  android:layout_marginLeft="10.0dp"
                                  style="@style/text_style_3"/>
                    </RadioGroup>
                </LinearLayout>
                <View style="@style/line1"/>
                <LinearLayout
                        android:id="@+id/ll_selectshop"
                        android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_shopnumber"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <Button android:id="@+id/btn_selecthouse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="@string/please_select_apply_house"
                            android:gravity="right|center_vertical"
                            style="@style/text_style_3"
                            android:drawableRight="@drawable/down_arrow"
                            android:layout_marginRight="10.0dp"
                            android:layout_weight="1"/>
                    <Button android:id="@+id/btn_selectstore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="@string/please_select_apply_store"
                            android:gravity="right|center_vertical"
                            style="@style/text_style_3"
                            android:drawableRight="@drawable/down_arrow"
                            android:layout_marginRight="10.0dp"
                            android:layout_weight="1"/>
                </LinearLayout>
                <View style="@style/line1"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:orientation="horizontal">
                    <TextView android:layout_width="@dimen/height_80"
                              android:layout_height="match_parent"
                              android:text="@string/apply_flagshipshop"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <RadioGroup android:id="@+id/rg_flagship"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:paddingLeft="10.0dp"
                                android:gravity="center">
                        <RadioButton android:id="@+id/rb_flagshipyes"
                                     android:layout_width="@dimen/height_20"
                                     android:layout_height="@dimen/height_20"
                                     android:background="@drawable/cart_product_checkbox_bg"
                                     android:checked="true"
                                     android:button="@null"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:text="@string/yes"
                                  android:layout_weight="1"
                                  android:layout_marginLeft="10.0dp"
                                  style="@style/text_style_3"/>
                        <RadioButton android:id="@+id/rb_flagshipno"
                                     android:layout_width="@dimen/height_20"
                                     android:layout_height="@dimen/height_20"
                                     android:background="@drawable/cart_product_checkbox_bg"
                                     android:button="@null" android:checked="false"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:text="@string/no"
                                  android:layout_weight="1"
                                  android:layout_marginLeft="10.0dp"
                                  style="@style/text_style_3"/>
                    </RadioGroup>
                </LinearLayout>
                <View style="@style/line1"/>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                        >
                    <TextView
                            android:id="@+id/shopinfo"
                            android:layout_width="@dimen/height_80"
                              android:layout_height="@dimen/height_50"
                              android:text="@string/apply_shopinfo"
                              android:layout_alignParentLeft="true"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                    <EditText
                            android:layout_toRightOf="@+id/shopinfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:padding="5dp"
                            android:inputType="textMultiLine"
                            android:scrollbars="vertical"
                            android:minLines="7"
                            android:gravity="top|left"
                            android:background="@android:drawable/edit_text"
                            style="@style/text_style_3" android:id="@+id/et_shopinfo"/>
                </RelativeLayout>
                <View style="@style/line1"/>
            </LinearLayout>
           



        </LinearLayout>
    </ScrollView>


</LinearLayout>