<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="60.0dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foot_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical">


        <FrameLayout
                android:id="@+id/tab_one_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/toolbar_tabonebg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/footer_active_bg"
                    android:visibility="visible"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:orientation="vertical"
                          android:padding="5.0dp">
                <ImageView
                        android:id="@+id/toolbar_tabone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@drawable/guide_home_on"/>
               <TextView android:id="@id/tab_one_text"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_horizontal"
                         android:textSize="@dimen/text_size_6"
                         android:text="@string/home_page"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
                android:id="@+id/tab_two_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/toolbar_tabtwobg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/footer_active_bg"
                    android:padding="5.0dp"
                    android:visibility="invisible"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:orientation="vertical"
                    android:padding="5.0dp">
                <ImageView
                        android:id="@+id/toolbar_tabtwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:src="@drawable/guide_discover_nm"/>
                <TextView android:id="@id/tab_two_text"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="2.0dp"
                          android:textSize="@dimen/text_size_6"
                          android:text="@string/discover"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
                android:id="@+id/tab_five_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_weight="1">
            <ImageView
                    android:id="@+id/toolbar_tabfivebg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/footer_active_bg"
                    android:visibility="invisible"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:orientation="vertical"
                          android:padding="5.0dp">
                <ImageView
                        android:id="@+id/toolbar_tabfive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@drawable/guide_tfaccount_nm"/>
                <TextView android:id="@id/tab_five_text"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="2.0dp"
                          android:textSize="@dimen/text_size_6"
                          android:text="@string/shop_mall"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
                android:id="@+id/tab_three_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <ImageView
                    android:id="@+id/toolbar_tabthreebg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/footer_active_bg"
                    android:visibility="invisible"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:orientation="vertical"
                          android:padding="5.0dp">
                <ImageView
                        android:id="@+id/toolbar_tabthree"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@drawable/guide_cart_nm"/>
                <TextView android:id="@id/tab_three_text"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="2.0dp"
                          android:textSize="@dimen/text_size_6"
                          android:text="@string/shop_cart"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
                android:id="@+id/tab_four_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <ImageView
                    android:id="@+id/toolbar_tabfourbg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/footer_active_bg"
                    android:visibility="invisible"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:padding="5.0dp"
                          android:orientation="vertical">
                <ImageView
                        android:id="@+id/toolbar_tabfour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        android:src="@drawable/guide_account_nm"/>
                <TextView android:id="@id/tab_four_text"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="2.0dp"
                          android:textSize="@dimen/text_size_6"
                          android:text="@string/my_self"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>