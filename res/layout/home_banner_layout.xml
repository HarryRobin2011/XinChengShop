<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <com.banksoft.XinChengShop.widget.rollviewpager.RollPagerView
            android:id="@id/rollPagerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150"
            app:rollviewpager_play_delay="3000"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60.0dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:layout_marginTop="5.0dp"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@id/xc_takeout"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/index_promotion_btn"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:src="@drawable/xc_w_m"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xc_takeout"
                    android:layout_marginTop="5.0dp"
                    android:textColor="@color/text_gray"
                    style="@style/text_style_4"/>
        </LinearLayout>
        <LinearLayout
                android:id="@id/xc_shop_ing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/index_shop_btn"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:src="@drawable/xc_shop"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xc_shop"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5.0dp"
                    style="@style/text_style_4"/>
        </LinearLayout>



        <LinearLayout
                android:id="@id/xc_qing_cang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/index_groupbuy_btn"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:src="@drawable/xc_qing_cang"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qingcang"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5.0dp"
                    style="@style/text_style_4"/>
        </LinearLayout>

        <LinearLayout
                android:id="@id/xc_location_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/index_lottery_btn"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:src="@drawable/xc_local_service"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xc_location_service"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5.0dp"
                    style="@style/text_style_4"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60.0dp"
            android:baselineAligned="false"
            android:layout_marginTop="5.0dp"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@id/xc_techan"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:src="@drawable/xc_wei_fang_t_c"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xc_techan"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5.0dp"
                    style="@style/text_style_4"/>
        </LinearLayout>

        <LinearLayout
                android:id="@id/xc_integral_mall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                     android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:src="@drawable/xc_ji_feng"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xc_shop_store"
                    android:textColor="@color/text_gray"
                    style="@style/text_style_4"
                    android:layout_marginTop="5.0dp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@id/xc_bbs_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/index_order_btn"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:src="@drawable/xc_t_g"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/me_money"
                    style="@style/text_style_4"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5.0dp"/>
        </LinearLayout>



        <LinearLayout
                android:id="@id/my_self"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/index_my_btn"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:src="@drawable/xc_my"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_self"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="5.0dp"
                    style="@style/text_style_4"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@id/sales_promotion_image"
               android:layout_width="match_parent"
               android:layout_height="@dimen/height_120"
               android:layout_marginTop="5.0dp"
               android:scaleType="fitXY"/>

</LinearLayout>