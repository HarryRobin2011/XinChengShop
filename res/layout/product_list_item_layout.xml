<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/body_bg">
    <LinearLayout android:id="@+id/group_buy_cell_layout"
                  android:layout_width="match_parent"
                  android:layout_height="120.0dp"
                  android:padding="10.0dp"
                  android:orientation="horizontal"
                  android:background="@drawable/body_bg">

        <LinearLayout android:id="@+id/image_layout"
                      android:layout_width="120.0dp"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">

            <ImageView android:id="@+id/imageView"
                       android:layout_width="120.0dp"
                       android:layout_height="100.0dp"
                       android:adjustViewBounds="true"
                       android:maxWidth="150.0dp"
                       android:maxHeight="120.0dp"
                       android:scaleType="fitXY"/>


        </LinearLayout>
        <LinearLayout android:id="@+id/product_desc"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="10.0dp"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:id="@+id/name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/text_size_3"
                          android:layout_weight="1"
                          android:lines="2"
                          style="@style/text_style_3"/>
                <TextView android:id="@id/take_operation"
                          android:layout_width="@dimen/height_80"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          style="@style/text_style_3"
                          android:visibility="gone"
                          android:layout_marginLeft="10.0dp"
                          android:background="@drawable/edit_text_bg"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginLeft="10.0dp"
                          android:gravity="bottom|center_vertical">
                <TextView android:id="@+id/discount_price"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/text_size_3"
                          style="@style/text_style_3"
                          android:textColor="@color/red_normal"
                          android:textStyle="bold"/>
                <TextView android:id="@id/real_price"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          style="@style/text_style_3"
                          android:gravity="center"
                          android:layout_marginLeft="5.0dp"/>
                <TextView android:id="@+id/sale_num"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/text_size_4"
                          android:singleLine="true"
                          android:ellipsize="end"
                          style="@style/text_style_4"
                          android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>