<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/title"/>
    <LinearLayout
            android:id="@id/check_login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:gravity="center"
            android:orientation="horizontal">
        <TextView android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:text="@string/check_password"
                  android:paddingLeft="10.0dp"
                  android:background="@drawable/button_white_bg"
                  android:layout_weight="1"
                  style="@style/text_style_3"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10.0dp"
                   android:src="@drawable/settings_arrow"/>
    </LinearLayout>

    <View style="@style/line1"/>
    <LinearLayout
            android:id="@id/check_pay_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:gravity="center"
            android:orientation="horizontal">
        <TextView android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:text="@string/check_pay_password"
                  android:paddingLeft="10.0dp"
                  android:background="@drawable/button_white_bg"
                  android:layout_weight="1"
                  style="@style/text_style_3"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10.0dp"
                   android:src="@drawable/settings_arrow"/>
    </LinearLayout>

    <View style="@style/line1"/>
    <LinearLayout
            android:id="@id/check_telphone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:gravity="center"
            android:orientation="horizontal">
        <TextView android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:text="@string/check_telphone"
                  android:paddingLeft="10.0dp"
                  android:background="@drawable/button_white_bg"
                  android:layout_weight="1"
                  style="@style/text_style_3"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10.0dp"
                   android:src="@drawable/settings_arrow"/>
    </LinearLayout>

    <View style="@style/line1"/>
    <LinearLayout
            android:id="@id/check_email"
            android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:gravity="center"
                  android:orientation="horizontal">
        <TextView android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:text="@string/check_email"
                  android:paddingLeft="10.0dp"
                  android:background="@drawable/button_white_bg"
                  android:layout_weight="1"
                  style="@style/text_style_3"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10.0dp"
                   android:src="@drawable/settings_arrow"/>
    </LinearLayout>

    <View style="@style/line1"/>
    <LinearLayout
                  android:id="@id/about"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:gravity="center"
                  android:orientation="horizontal">
        <TextView  android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:text="@string/about"
                  android:paddingLeft="10.0dp"
                  android:background="@drawable/button_white_bg"
                  android:layout_weight="1"
                  style="@style/text_style_3"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="10.0dp"
                   android:src="@drawable/settings_arrow"/>
    </LinearLayout>

    <View style="@style/line1"/>
    <LinearLayout
                  android:id="@id/quit"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:gravity="center"
                  android:layout_marginTop="10.0dp"
                  android:orientation="horizontal">
        <TextView  android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:text="@string/quit_login"
                  android:paddingLeft="10.0dp"
                   android:textColor="@color/red_normal"
                   android:gravity="center"
                  android:background="@drawable/button_white_bg"
                  android:layout_weight="1"
                  style="@style/text_style_3"/>
    </LinearLayout>

</LinearLayout>