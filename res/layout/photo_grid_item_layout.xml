<?xml version="1.0" encoding="utf-8"?>
<com.banksoft.XinChengShop.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               android:id="@id/content_layout"
                                               android:layout_width="@dimen/height_100"
                                               android:layout_height="@dimen/height_100">
    <ImageView
            android:id="@id/image_view"
            android:layout_width="@dimen/height_80"
            android:layout_height="@dimen/height_80"

            android:background="@drawable/edit_gray_bg"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>
    <ImageView android:id="@id/close"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/close_pushbanner"
               android:visibility="gone"
               android:layout_alignParentRight="true"/>
</com.banksoft.XinChengShop.widget.SquareLayout>