<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/title"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edit_text_bg"
                  android:layout_margin="10.0dp"
                  android:orientation="horizontal">
        <com.banksoft.XinChengShop.widget.ClearEditText
                android:id="@id/check_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:background="@drawable/white_drawable"
                android:paddingLeft="10.0dp"
                android:layout_margin="1.0dp"
                android:layout_weight="1"
                android:hint="@string/please_input_check_code"/>
        <ImageView
                   android:id="@id/voice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginRight="10.0dp"
                   android:background="@drawable/abc_ic_voice_search_api_holo_light"/>
    </LinearLayout>

    <Button android:id="@id/ok"
            android:layout_width="100.0dp"
            android:layout_height="@dimen/height_40"
            android:background="@drawable/red_radus_bg"
            android:layout_gravity="right"
            android:layout_margin="10.0dp"
            style="@style/text_style_3"
            android:textColor="@color/text_white"
            android:text="@string/check"
            android:gravity="center"/>
</LinearLayout>