<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/body_bg">
    <include layout="@layout/title"/>
    <LinearLayout android:layout_width="match_parent"
                                                  android:layout_height="@dimen/height_50"
                                                  android:background="@color/white"
                                                  android:orientation="horizontal">
    <TextView android:layout_width="@dimen/height_100"
              android:layout_height="@dimen/height_50"
              style="@style/text_style_3"
              android:text="@string/card_holder"
              android:paddingLeft="10.0dp"/>
    <EditText android:id="@id/name"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              style="@style/text_style_3"
              android:background="@drawable/edit_text_white_bg"/>
</LinearLayout>
    <View style="@style/line1"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:background="@color/white"
                  android:orientation="horizontal">
        <TextView android:layout_width="@dimen/height_100"
                  android:layout_height="@dimen/height_50"
                  style="@style/text_style_3"
                  android:text="@string/bank_name"
                  android:paddingLeft="10.0dp"/>
        <EditText android:id="@id/bank_name"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  style="@style/text_style_3"
                  android:background="@drawable/edit_text_white_bg"/>
    </LinearLayout>
    <View style="@style/line1"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:background="@color/white"
                  android:orientation="horizontal">
        <TextView android:layout_width="@dimen/height_100"
                  android:layout_height="@dimen/height_50"
                  style="@style/text_style_3"
                  android:text="@string/card_no"
                  android:paddingLeft="10.0dp"/>
        <EditText android:id="@id/card_no"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  style="@style/text_style_3"
                  android:background="@drawable/edit_text_white_bg"/>
    </LinearLayout>
    <View style="@style/line1"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/height_50"
                  android:background="@color/white"
                  android:orientation="horizontal">
        <TextView android:layout_width="@dimen/height_100"
                  android:layout_height="@dimen/height_50"
                  style="@style/text_style_3"
                  android:text="@string/open_card_address"
                  android:paddingLeft="10.0dp"/>
        <EditText android:id="@id/open_card_address"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  style="@style/text_style_3"
                  android:background="@drawable/edit_text_white_bg"/>
    </LinearLayout>
    <View style="@style/line1"/>
</LinearLayout>