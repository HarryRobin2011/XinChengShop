<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/body_bg">
    <include layout="@layout/title"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="180.0dp"
                            android:orientation="vertical"
                            android:background="@drawable/personal_info_bg_unlogin_noon">
                <ImageView android:id="@id/head_image"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_centerInParent="true"
                              android:orientation="vertical">
                    <FrameLayout android:layout_width="wrap_content"
                                 android:layout_height="wrap_content">
                        <com.banksoft.XinChengShop.widget.imageView.CustomShapeImageView android:layout_width="60.0dp"
                                                                                         android:layout_height="60.0dp"
                                                                                         android:src="@color/text_white"/>

                        <com.banksoft.XinChengShop.widget.imageView.CustomShapeImageView android:id="@id/login"
                                                                                         android:layout_width="60.0dp"
                                                                                         android:layout_height="60.0dp"
                                                                                         android:src="@drawable/contact_avator"/>
                    </FrameLayout>

                    <TextView android:id="@id/account" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:layout_marginTop="10.0dp"
                              android:textColor="@color/text_white"
                              android:gravity="center"
                              style="@style/text_style_3"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/height_50"
                              android:background="@color/black"
                              android:alpha="0.5"
                              android:layout_alignParentBottom="true"
                              android:orientation="horizontal">
                    <TextView android:id="@id/my_collect_product"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              style="@style/text_style_3"
                              android:textColor="@color/text_white"
                              android:gravity="center"
                              android:layout_weight="1"
                              android:text="@string/my_self_collect"/>
                    <View android:layout_width="0.1dp"
                          android:layout_height="match_parent"
                          android:background="@color/text_white"
                          android:layout_marginTop="10.0dp"
                          android:layout_marginBottom="10.0dp"/>
                    <TextView android:id="@id/my_collect_shop"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              style="@style/text_style_3"
                              android:textColor="@color/text_white"
                              android:gravity="center"
                              android:layout_weight="1"
                              android:text="@string/my_collect_shop"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10.0dp"
                          android:background="@color/white"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/personal_icon_pocket"
                               android:paddingLeft="10.0dp"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/my_wallet"
                              style="@style/text_style_3"
                              android:layout_weight="1"
                              android:paddingLeft="10.0dp"/>
                    <TextView android:id="@id/my_wallet"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/money_management"
                              style="@style/text_style_4"
                              android:paddingRight="5.0dp"/>
                    <TextView android:layout_width="15.0dp"
                              android:layout_height="15.0dp"
                              android:background="@drawable/settings_arrow"
                              android:layout_marginRight="5.0dp"/>
                </LinearLayout>
                <View style="@style/line1"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="60.0dp"
                              android:orientation="horizontal"
                              android:gravity="center_vertical">
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:gravity="center"
                                  android:orientation="vertical">
                        <TextView android:id="@id/balance"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="@string/zero_fl"
                                  style="@style/text_style_3"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="@string/account_balance"
                                  android:layout_marginTop="5.0dp"
                                  style="@style/text_style_4"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:gravity="center"
                                  android:orientation="vertical">
                        <TextView android:id="@id/integral"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="@string/zero_fl"
                                  style="@style/text_style_3"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="@string/account_integral"
                                  style="@style/text_style_4"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <View style="@style/line2"/>
            <View style="@style/line2"
                  android:layout_marginTop="10.0dp"/>
            <LinearLayout android:id="@id/my_order"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:gravity="center_vertical"
                          android:background="@drawable/button_white_bg"
                          android:layout_marginTop="10.0dp"
                          android:orientation="horizontal">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/personal_icon_order"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/my_order"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="15.0dp"
                          android:layout_height="15.0dp"
                          android:background="@drawable/settings_arrow"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>
            <View style="@style/line2"/>
            <LinearLayout android:id="@id/my_score_order"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:background="@drawable/button_white_bg"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">
                <ImageView android:layout_width="35.0dp"
                           android:layout_height="35.0dp"
                           android:src="@drawable/android_my_jd_account_safe"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/integral_order"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="15.0dp"
                          android:layout_height="15.0dp"
                          android:background="@drawable/settings_arrow"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>
            <View style="@style/line2"/>
            <LinearLayout android:id="@id/my_comment"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:background="@drawable/button_white_bg"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">
                <ImageView android:layout_width="35.0dp"
                           android:layout_height="35.0dp"
                           android:src="@drawable/android_my_jd_discuss"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/my_self_comment"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="15.0dp"
                          android:layout_height="15.0dp"
                          android:background="@drawable/settings_arrow"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>

            <View style="@style/line1"/>
            <LinearLayout android:id="@id/my_shop"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:background="@drawable/button_white_bg"
                          android:gravity="center_vertical"
                          android:visibility="gone"
                          android:orientation="horizontal">
                <ImageView android:layout_width="35.0dp"
                           android:layout_height="35.0dp"
                           android:src="@drawable/android_my_jd_service_manager"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/store_to_apply"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/to_right"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>
            <View style="@style/line1"/>
            <LinearLayout android:id="@id/my_send_order"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:visibility="gone"
                          android:background="@drawable/button_white_bg"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">
                <ImageView android:layout_width="35.0dp"
                           android:layout_height="35.0dp"
                           android:src="@drawable/android_my_jd_appoint"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/my_send_order"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/to_right"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>

            <View style="@style/line1"/>

            <View style="@style/line1"/>
            <LinearLayout android:id="@id/shop_layout"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20.0dp"
                          android:orientation="vertical">
                <View style="@style/line1"/>
                <LinearLayout android:id="@id/my_product_manager"
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:background="@drawable/button_white_bg"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="35.0dp"
                               android:layout_height="35.0dp"
                               android:src="@drawable/android_my_jd_history"
                               android:paddingLeft="10.0dp"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/my_product_manager"
                              style="@style/text_style_3"
                              android:layout_weight="1"
                              android:paddingLeft="10.0dp"/>
                    <TextView android:layout_width="15.0dp"
                              android:layout_height="15.0dp"
                              android:background="@drawable/settings_arrow"
                              android:layout_marginRight="10.0dp"/>
                </LinearLayout>
                <View style="@style/line1"/>

                <LinearLayout android:id="@id/seller_order_layout"
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:gravity="center_vertical"
                              android:background="@color/white"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="35.0dp"
                               android:layout_height="35.0dp"
                               android:src="@drawable/android_my_jd_easy_mananger"
                               android:paddingLeft="10.0dp"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/seller_order"
                              style="@style/text_style_3"
                              android:layout_weight="1"
                              android:paddingLeft="10.0dp"/>
                    <TextView android:layout_width="15.0dp"
                              android:layout_height="15.0dp"
                              android:background="@drawable/settings_arrow"
                              android:layout_marginRight="10.0dp"/>
                </LinearLayout>
                <View style="@style/line1"/>
                <LinearLayout android:id="@id/consumption_layout"
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/height_50"
                              android:gravity="center_vertical"
                              android:background="@color/white"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="35.0dp"
                               android:layout_height="35.0dp"
                               android:src="@drawable/android_my_jd_game_center"
                               android:paddingLeft="10.0dp"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/consumption"
                              style="@style/text_style_3"
                              android:layout_weight="1"
                              android:paddingLeft="10.0dp"/>
                    <TextView android:layout_width="15.0dp"
                              android:layout_height="15.0dp"
                              android:background="@drawable/settings_arrow"
                              android:layout_marginRight="10.0dp"/>
                </LinearLayout>
                <View style="@style/line1"/>
            </LinearLayout>
            <View style="@style/line1"
                  android:layout_marginTop="20.0dp"/>


            <View style="@style/line1"/>
            <LinearLayout android:id="@id/dispatch_manager"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:gravity="center_vertical"
                          android:background="@color/white"
                          android:orientation="horizontal">
                <ImageView android:layout_width="35.0dp"
                           android:layout_height="35.0dp"
                           android:src="@drawable/android_my_jd_phone_appoint"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/dispatch_manager_title"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="15.0dp"
                          android:layout_height="15.0dp"
                          android:background="@drawable/settings_arrow"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>
            <View style="@style/line1"/>
            <LinearLayout android:id="@id/my_integral_mall"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:gravity="center_vertical"
                          android:background="@color/white"
                          android:visibility="gone"
                          android:orientation="horizontal">
                <ImageView android:layout_width="35.0dp"
                           android:layout_height="35.0dp"
                           android:src="@drawable/android_my_jd_phone_appoint"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/integral_mall"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="15.0dp"
                          android:layout_height="15.0dp"
                          android:background="@drawable/settings_arrow"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>
            <View style="@style/line1"/>
            <LinearLayout android:id="@id/check_update"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:gravity="center_vertical"
                          android:background="@color/white"
                          android:orientation="horizontal">
                <ImageView android:layout_width="35.0dp"
                           android:layout_height="35.0dp"
                           android:src="@drawable/android_my_jd_blank_note"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/check_update"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="15.0dp"
                          android:layout_height="15.0dp"
                          android:background="@drawable/settings_arrow"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>
            <View style="@style/line1"/>
            <LinearLayout android:id="@id/about"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/height_50"
                          android:gravity="center_vertical"
                          android:background="@color/white"
                          android:orientation="horizontal">
                <ImageView android:layout_width="35.0dp"
                           android:layout_height="35.0dp"
                           android:src="@drawable/android_my_jd_online_service"
                           android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/about"
                          style="@style/text_style_3"
                          android:layout_weight="1"
                          android:paddingLeft="10.0dp"/>
                <TextView android:layout_width="15.0dp"
                          android:layout_height="15.0dp"
                          android:background="@drawable/settings_arrow"
                          android:layout_marginRight="10.0dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>