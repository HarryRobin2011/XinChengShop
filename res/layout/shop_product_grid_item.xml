<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.banksoft.XinChengShop.widget.SquareLayout android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
        <ImageView android:id="@id/image"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="fitXY"/>
    </com.banksoft.XinChengShop.widget.SquareLayout>
    <TextView android:id="@id/describe"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              style="@style/text_style_3"
              android:lines="2"
              android:ellipsize="end"
              android:gravity="center_vertical"
            android:paddingLeft="10.0dp"/>
    <View style="@style/line2"/>
    <LinearLayout android:layout_width="match_parent"
                 android:layout_height="@dimen/height_50"
                  android:background="@color/white"
            android:orientation="horizontal">
        <TextView android:id="@id/price"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                 style="@style/text_style_3"
                  android:layout_marginLeft="10.0dp"
                  android:textStyle="bold"
                  android:gravity="center_vertical|left"
                android:textColor="@color/red_normal"/>
        <TextView android:id="@id/num"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  style="@style/text_style_3"
                  android:gravity="center_vertical|right"
                android:layout_marginRight="10.0dp"/>
    </LinearLayout>
    <View style="@style/line2"/>

</LinearLayout>