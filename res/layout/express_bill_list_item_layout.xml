<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@id/order_list_item"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50.0dp"
                  android:padding="10.0dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <ImageView android:layout_width="@dimen/height_20"
                   android:layout_height="@dimen/height_20"
                   android:src="@drawable/ic_product_detail_shop_into"/>
        <TextView android:id="@id/shop_name"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="@dimen/text_size_3"
                  android:layout_marginLeft="10.0dp"
                  android:textColor="@color/red"
                  android:singleLine="true"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/arrow_expend_right"
                   android:layout_marginLeft="20.0dp"/>
    </LinearLayout>
    <View style="@style/line2"/>
    <LinearLayout android:id="@id/content"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/body_bg"
                  android:orientation="vertical"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
            <TextView android:id="@id/init_address"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/height_40"
                      style="@style/text_style_3"
                      android:gravity="right|center_vertical"
                      android:layout_weight="1"
                      android:paddingRight="10.0dp"/>
            <TextView android:id="@id/destination"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/height_40"
                      style="@style/text_style_3"
                      android:layout_weight="1"
                      android:gravity="right|center_vertical"
                      android:paddingRight="10.0dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/height_40"
                      android:gravity="center_vertical"
                      android:paddingLeft="10.0dp"
                      android:orientation="horizontal">
            <TextView android:id="@id/telPhone"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/height_30"
                      style="@style/text_style_3"
                      android:background="@color/white"
                      android:layout_weight="1"/>
            <ImageView android:layout_width="@dimen/height_20"
                       android:layout_height="@dimen/height_20"
                       android:layout_marginRight="10.0dp"
                       android:src="@android:drawable/sym_action_call"/>
        </LinearLayout>


        <TextView android:id="@id/total"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/height_30"
                  style="@style/text_style_3"
                  android:gravity="right|center_vertical"
                  android:paddingRight="10.0dp"/>
    </LinearLayout>

    <View style="@style/line2"/>
    <LinearLayout android:id="@id/layout_tool"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/height_40"
                  android:gravity="center_vertical|right"
                  android:visibility="gone"
                  android:layout_marginRight="10.0dp"
                  android:orientation="horizontal">
        <TextView android:id="@id/my_dispatch"
                  android:layout_width="80.0dp"
                  android:layout_height="@dimen/height_30"
                  style="@style/text_style_3"
                  android:gravity="center"
                  android:background="@drawable/edit_text_red_bg"
                  android:textColor="@color/red_normal"
                  android:layout_margin="5.0dp"
                  android:visibility="gone"
                  android:text="@string/my_dispatch"/>
    </LinearLayout>

</LinearLayout>